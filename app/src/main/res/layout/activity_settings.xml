<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/gasConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="0.02"
        android:text="Ställ in bensinförbrukning (liter/mil):" />

    <EditText
        android:id="@+id/gasConsumption_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:ems="10"
        android:hint="Bensinförbrukning"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/standardList_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="0.02"
        android:text="Ställ in standardlista:" />

    <ListView
        android:id="@+id/setStandardList_listView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="0.62" />

    <AutoCompleteTextView
        android:id="@+id/addStandardProduct_actv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:hint="Lägg till produkt" />

    <Button
        android:id="@+id/saveSettings_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text="Spara inställningar" />

    <Button
        android:id="@+id/clearStandardList_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="0.02"
        android:background="@android:color/holo_red_dark"
        android:text="Rensa standardlista" />

</LinearLayout>